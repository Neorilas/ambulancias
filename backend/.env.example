# ============================================================
# CONFIGURACIÓN DEL SERVIDOR - Copiar a .env y rellenar
# NUNCA subir .env a control de versiones
# ============================================================

# --- Servidor ---
NODE_ENV=development
PORT=3001
API_VERSION=v1

# --- Base de datos MySQL ---
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ambulancia_db
DB_USER=ambulancia_user
DB_PASSWORD=CAMBIAR_PASSWORD_SEGURO
DB_POOL_MIN=2
DB_POOL_MAX=10

# --- JWT ---
# Generar con: node -e "require('crypto').randomBytes(64).toString('hex')|xargs echo"
JWT_ACCESS_SECRET=CAMBIAR_POR_SECRET_64_BYTES_ALEATORIO
JWT_REFRESH_SECRET=CAMBIAR_POR_OTRO_SECRET_64_BYTES_ALEATORIO
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# --- Archivos / Uploads ---
UPLOADS_DIR=./uploads
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# --- CORS ---
# En producción, poner solo el dominio del frontend
CORS_ORIGIN=http://localhost:5173

# --- Rate Limiting ---
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW_MS=900000
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# --- Logging ---
LOG_LEVEL=debug
LOG_DIR=./logs

# --- Bcrypt ---
BCRYPT_ROUNDS=12
